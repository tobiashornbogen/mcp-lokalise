{
  "name": "@tobiashornbogen/lokalise-mcp-server",
  "version": "2.0.0",
  "description": "A Model Context Protocol (MCP) server for managing Lokalise translation keys with TypeScript support",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "lokalise-mcp-server": "dist/mcp-server.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./server": {
      "types": "./dist/mcp-server.d.ts",
      "import": "./dist/mcp-server.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "prepublishOnly": "npm run build",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "server": "tsx src/server.ts",
    "add-key": "tsx src/add-key.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPatterns=integration",
    "test:unit": "jest --testPathPatterns=unit"
  },
  "keywords": [
    "lokalise",
    "mcp",
    "model-context-protocol",
    "translation",
    "i18n",
    "typescript",
    "cursor",
    "api-client"
  ],
  "author": "tobiashornbogen",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tobiashornbogen/mcp-lokalise.git"
  },
  "bugs": {
    "url": "https://github.com/tobiashornbogen/mcp-lokalise/issues"
  },
  "homepage": "https://github.com/tobiashornbogen/mcp-lokalise#readme",
  "type": "module",
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.13.1",
    "axios": "^1.10.0",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "inquirer": "^12.6.3"
  },
  "devDependencies": {
    "@jest/globals": "^30.0.5",
    "@types/express": "^5.0.3",
    "@types/inquirer": "^9.0.8",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.1.0",
    "jest": "^30.0.5",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3"
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}